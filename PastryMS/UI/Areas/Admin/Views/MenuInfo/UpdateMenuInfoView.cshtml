<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="../layuimini/lib/layui-v2.6.3/css/layui.css" media="all">
    <link rel="stylesheet" href="../layuimini/css/public.css" media="all">
    <style>
        body {
            background-color: #ffffff;
        }
    </style>
</head>
<body>
    <div class="layui-form layuimini-form"  lay-filter="formTest">
        <div class="layui-form-item">
            <label class="layui-form-label ">标题</label>
            <div class="layui-input-block">
                <input type="text" name="title" value="" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label ">描述</label>
            <div class="layui-input-block">
                <input type="text" name="description" value="" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label ">等级</label>
            <div class="layui-input-block">
                <input type="text" name="level" value="" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label ">排序</label>
            <div class="layui-input-block">
                <input type="text" name="sort" value="" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label ">访问地址</label>
            <div class="layui-input-block">
                <input type="text" name="href" value="" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label ">父级菜单</label>
            <div class="layui-input-block">
                <select id="parentSelect" name="parentId" lay-filter="select-filter">
                    <option value=""></option>
                </select>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label ">图标样式</label>
            <div class="layui-input-block">
                <input type="text" name="icon" value="" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label ">目标</label>
            <div class="layui-input-block">
                <input type="text" name="target" value="" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn layui-btn-normal" lay-submit lay-filter="saveBtn">确认保存</button>
            </div>
        </div>
    </div>
    <script src="../layuimini/lib/layui-v2.6.3/layui.js" charset="utf-8"></script>
    <script>
        var parentData;
        var form;
        function getData(Data) {
            parentData = Data;

            form.val("formTest", {
                "title": parentData.title,
                "description": parentData.description,
                "level": parentData.level,
                "sort": parentData.sort,
                "href": parentData.href,
                "parentId": parentData.parentId,
                "icon": parentData.icon,
                "target": parentData.target,

            })
        }

        layui.use(['form'], function () {
            var layer = layui.layer,
                $ = layui.$;
            form = layui.form;

            var id = window.location.search.substr(4);

            $.ajax({
                url: "/Admin/MenuInfo/GetMenuInfoById",
                type: "Get",
                data: {
                    id: id
                },
                success: function (res) {
                    //var leaderSelect = res.data.leaderSelect;
                    //for (var i = 0; i < leaderSelect.length; i++) {
                    //    $('#leaderSelect').append('<Option value="' + leaderSelect[i].value + '">' + leaderSelect[i].title + '</Option>');
                    //}
                    var parentSelect = res.data.selectOption.parentSelect;
                    for (var i = 0; i < parentSelect.length; i++) {
                        $('#parentSelect').append('<Option value="' + parentSelect[i].value + '">' + parentSelect[i].title + '</Option>');
                    }
                    form.render('select');

                    form.val('formTest', {
                        "parentId": res.data.menuInfo.parentId
                    })
                }
            })

            //监听提交
            form.on('submit(saveBtn)', function (data) {
                data.field.id = parentData.id;
                $.ajax({
                    url: "/Admin/MenuInfo/UpdateMenuInfo",
                    type: "Post",
                    data: data.field,
                    success: function (res) {
                        if (res.code == 200) {
                            var index = layer.alert(res.msg, {
                                title: '添加结果'
                            }, function () {
                                // 关闭弹出层
                                layer.close(index);
                                var iframeIndex = parent.layer.getFrameIndex(window.name);
                                parent.layer.close(iframeIndex);
                                parent.location.reload();
                            });

                        } else {
                            layer.alert(res.msg);
                        }
                    }
                })
                return false;
            });

        });
    </script>
</body>
</html>
